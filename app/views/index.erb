<link rel="stylesheet" href="/stylesheets/cssshake.css">

<div id="wrapper">

<!-- Sidebar -->
  <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
          <li class="sidebar-brand">
              <a href="">
                Last 10 Guilts
              </a>
          </li>
          
            <% @all_items.each do |item| %>
            <li>
              <a href="/result"><%= item.desired_name %></a>
          </li>
          <% end %>
      </ul>
  </div>
<!-- /#sidebar-wrapper -->

<!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
          <div class="col-lg-12">
              <h1>Coffee Guilt</h1>

              <div class="shake-slow shake-constant" style="width:200px">
              <img src="/images/thecup-cutout.png" alt="Cup"
              style="width:25%;height:25%;"></img>
              </div>

              <% if @items && @items.errors.any? %>
                <div>
                  <strong>You base item is greater than your dream item! Try again.</strong>
                  <ul>
                    <% @items.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            <div class="row">
              <form class="form-horizontal" method="post" action="/results">

                <div class="col-xs-8">
                  <br>
                  <label for="DesiredName">Dream Item:</label>
                  <input type="text" class="form-control" name="desired_name" id="desired_name" placeholder="Item name">
               </div>

                <div class="col-xs-8">
                  <br>
                  <label for="DesiredPrice">Dream Item Cost:</label>
                  <input type="integer" class="form-control" name="desired_price" id="desired_price" placeholder="Item price">
                </div>

                <div class="col-xs-8">
                  <p> How many fancy $5 coffees does it take to buy your dream item?</p>
                </div>

                <div class="col-sm-10">
                  <br>
                  <button type="submit" class="btn btn-primary ">Guilt !</button>
                </div>
                
               <div class="col-xs-8">
                  <br>
                  <label for="BaseName"></label>
                  <input type="hidden" class="form-control" name="base_name" id="base_name" value="coffee" readonly placeholder="coffee">
               </div>

                <div class="col-xs-8">
                  <br>
                  <label for="BasePrice"></label>
                  <input type="hidden" class="form-control" name="base_price" id="base_price" value="5" readonly placeholder="5">
               </div> 

                <!-- <div class="col-sm-10">
                  <br>
                  <button type="submit" class="btn btn-primary">Guilt !</button>
                </div> -->

              </form>

            </div>
        </div>
      </div>
    </div>
  </div>
<!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper