<script src="//cdn.jsdelivr.net/velocity/1.2.3/velocity.min.js"></script>
   <script> 
    $(document).ready(function() {Materialize.showStaggeredList('.coffee_list');
  });
  </script>

 
    <div class="col-xs-8">
      <div class="result_box">
      <div class="row">
          <div class="col-lg-12">
            <h1>Results</h1>

            <h2>A <%= @items.first.desired_name %> is equivalent to <%= @items.first.calculation.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %>  <%= @items.first.base_name %>s </h2>

            <h3> <%= @items.first.threshold %> </h3>
            <h4> * Click on a coffee cup to do another search</h4>

          </div>
        </div>

        <a id="coffee_link" href="/"> 
        <% if @items.first.calculation < 500 %>
          <div class="coffee_container">
            <% (@items.first.calculation/28).times do |c| %>
            <div class="coffee_set" style="right:<%=2+c%>px; bottom:<%=3+c%>px; %>">
                <ul class='coffee_list'>
                <% 28.times do |img| %>
                  <li class='coffee_icon' style="transform: translateX(0px); opacity: 0;"></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <% if @items.first.calculation % 28 != 0 %>
              <div class="coffee_set">
                <ul class='coffee_list'>
                <% (@items.first.calculation % 28).times do |img| %>
                  <li class='coffee_icon' style="transform: translateX(0px); opacity: 0;"></li>
                <% end %>
              </ul>
            </div>
            <% end %>
          </div>
        <% else %>
          <div class="coffee_container">
          <% 18.times do |c| %>
            <div class="coffee_set" style="right:<%=2+c%>px; bottom:<%=2+c%>px; %>">
                <ul class='coffee_list'>
                <% 28.times do |img| %>
                <li class='coffee_icon' style="transform: translateX(0px); opacity: 0;"></li>

                  <% end %>

                <% end %>

              </ul>

            </div>
          <% end %>

          </div>

     </div>
    </div>


